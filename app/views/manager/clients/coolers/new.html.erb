<%= simple_form_for @cooler, url: manager_client_coolers_path(@client),
                    html: { class: 'relative',
                            data: {
                              controller: 'nested-form',
                              nested_form_wrapper_selector_value: '.nested-form-wrapper'
                            } } do |form| %>
  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl"><%= t('.title', client: @client) %></h1>
    <div>
      <%= form.button :submit, t('.save'), class: 'cursor-pointer' %>
    </div>
  </div>
  <%= render "form", cooler: @cooler, form: form %>
<% end %>